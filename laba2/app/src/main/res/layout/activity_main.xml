<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFE6F3"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/FragmentFirst"
        android:name="com.example.laba2.FragmentFirst"
        android:layout_width="334dp"
        android:layout_height="352dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="99dp"
        app:layout_constraintBottom_toTopOf="@+id/FragmentSecond"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_first" />

    <fragment
        android:id="@+id/FragmentSecond"
        android:name="com.example.laba2.FragmentSecond"
        android:layout_width="253dp"
        android:layout_height="0dp"
        android:layout_marginBottom="77dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FragmentFirst"
        tools:layout="@layout/fragment_second" />

</androidx.constraintlayout.widget.ConstraintLayout>