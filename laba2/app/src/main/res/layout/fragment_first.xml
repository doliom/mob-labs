<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Виберіть тип посуду:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:entries="@array/tablewarelist" />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Виберіть виробника:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <CheckBox
        android:id="@+id/check_lembik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lembik" />

    <CheckBox
        android:id="@+id/check_luminarc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luminarc" />

    <CheckBox
        android:id="@+id/check_ceramic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Souful Ceramic" />

    <TextView
        android:id="@+id/textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Виберіть діапазон цін:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <CheckBox
        android:id="@+id/check_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 - 500" />

    <CheckBox
        android:id="@+id/check_500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500 - 1000" />

    <CheckBox
        android:id="@+id/check_1000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000 - ..." />

    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="OK" />
</LinearLayout>